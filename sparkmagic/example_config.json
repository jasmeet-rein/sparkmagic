  "kernel_python_credentials" : {
    "username": "",
    "password": "",
    "url": "http://prod-hadoop1.ai-rein.com:8999",
    "auth": "None"
  },

  "kernel_scala_credentials" : {
    "username": "",
    "password": "",
    "url": "http://prod-hadoop1.ai-rein.com:8999",
    "auth": "None"
  },
  "kernel_r_credentials": {
    "username": "",
